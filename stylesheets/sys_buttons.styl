// System Buttons
makeSysBtn(alignto)
  first = 3px
  second = first + 20px
  third = first + 40px

  close = #FF5955
  minimize = #FFBB09
  maximize = #17C935

  -webkit-app-region: no-drag

  .osx-window-btn
    position absolute
    top 20px
    width 12px
    height 12px
    border-radius 50%
    if alignto == left
      margin-left 5px
    else
      margin-right 5px

  .red
    background close
    if alignto == left
      left first
    else
      right first

    .text
      position fixed
      font-size 13px
      margin-left 2.5px
      margin-top -4.5px
      color black
      visibility hidden

    &:hover .text
      visibility visible


  .yellow
    background minimize
    if alignto == left
      left second
    else
      right third

    .text
      position fixed
      font-size 18px
      margin-left 2.7px
      margin-top -7px
      color black
      visibility hidden

    &:hover .text
      visibility visible

  .green
    opacity 0.4
    background maximize
    if alignto == left
      left third
    else
      right second

