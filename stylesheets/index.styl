vendor-prefixes ?= webkit official // @stylint ignore
@import 'nib'

// Presets
$background_color = #222222
$text_color = #eeebeb

// Defaults
@font-face
  font-family 'Lato'
  font-style normal
  font-weight 400
  src local('Lato Regular'), local('Lato-Regular'), url('../fonts/lato.woff2') format('woff2')
  unicode-range U+0000-00FF, U+0131, U+0152-0153, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2212, U+2215, U+E0FF, U+EFFD, U+F000

@font-face
  font-family 'Roboto'
  font-style normal
  font-weight 300
  src local('Roboto Light'), local('Roboto-Light'), url('../fonts/roboto_light.woff2') format('woff2')
  unicode-range U+0000-00FF, U+0131, U+0152-0153, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2212, U+2215, U+E0FF, U+EFFD, U+F000


// Merge
@import osx_buttons
@import win_buttons
@import update
@import 'error'
@import 'main'
@import complete

body
  background-image url('../img/background.png')
  background-color $background_color
  color $text_color
  font-family 'Lato'
  overflow hidden
  user-select none
  -webkit-app-region drag // @stylint ignore

// Safety for when switching between OSX and Windows buttons
header
  height 20px

button
  -webkit-app-region no-drag // @stylint ignore

a
  -webkit-app-region no-drag // @stylint ignore// @stylint ignore


// Helpers
.hidden
  display none

#main_container
  position relative
  top 5px

// Banner
.banner
  text-align center

// Footer
$footer_bottom = 2px
$footer_side = 10px

footer
  background-color $background_color
  bottom 0
  display block
  height footer_bottom + 22px
  position absolute
  width 100%
  z-index 10
  -webkit-app-region no-drag // @stylint ignore

.github
  bottom $footer_bottom
  left $footer_side
  position inherit

  a
    cursor pointer

  a:hover
    color $text_color

  i.icon
    margin 0 0 0 0

.championify_version
  -webkit-app-region no-drag // @stylint ignore
  bottom $footer_bottom
  right $footer_side
  position absolute
  color #989898
