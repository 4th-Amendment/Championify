// NOTE: This is a workaround as clicks at the top of a frameless border dont work,
// preventing the OSX buttons from working.
#main_container
  top 32px
  position relative
  // -webkit-app-region drag


// Banner
.banner
  text-align center
  margin-top -35px
  // margin-top -10px  // Use for Borderless

// Browse/Inputs
.browse_title
  text-align center
  margin-top -15px
  margin-bottom 5px

.lol_dir_input
  margin auto
  width elemWidth
  -webkit-app-region: no-drag;

.lol_dir_input_msg
  text-align center
  margin-top -15px
  height 25px
  width elemWidth

  .yellow
    color yellow

  .green
    color #0ce3ac


// Options
.options
  -webkit-app-region: no-drag;
  position relative
  left 4%


// Submit/Progress
.submitBtns
  -webkit-app-region: no-drag;
  text-align center
  margin-top 20px

.status
  text-align center

.progress
  margin auto
  margin-top -5px
  width elemWidth

.progresslog
  // height 230px  // Use for Borderless
  height 170px
  overflow hidden
  text-align center
  margin-top 5px

  ::-webkit-scrollbar
    display none

  div
    height 100%
    overflow auto


// Footer
footerBottom = 2px
footerSide = 10px

footer
  position absolute
  display block
  background-color background_color
  height footerBottom + 22px
  width 100%
  bottom 0px
  z-index 10

.github
  bottom footerBottom
  left footerSide
  position absolute

.version
  bottom footerBottom
  right footerSide
  position absolute
  color #989898


// Update View
.updating
  margin-top 2px
  text-align center

// Error View
.error
  margin-top 2px
  text-align center

  img
    width 100px
    height 100px

  p
    margin-top 30px
    margin-left 4%
    margin-right 4%
