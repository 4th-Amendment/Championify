vendor-prefixes ?= webkit official
@import 'nib'
// @import sys_buttons

elemWidth = 95%
background_color = #222222
text_color = #eeebeb

// Defaults
@font-face
  font-family 'Lato'
  font-style normal
  font-weight 400
  src local('Lato Regular'), local('Lato-Regular'), url('../fonts/lato.woff2')
  unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2212, U+2215, U+E0FF, U+EFFD, U+F000


body
  overflow hidden
  user-select none
  background-image url('../img/background.png')
  font-family 'Lato'
  background-color background_color
  color text_color


// Helpers
.hidden
  display none


// NOTE: This is a workaround as clicks at the top of a frameless border dont work,
// preventing the OSX buttons from working.
#main_container
  top 15px
  position relative
  // -webkit-app-region drag


// Banner
.banner
  text-align center
  // margin-top -35px
  // margin-top -10px  // Use for Borderless

// Browse/Inputs
.browse_title
  text-align center
  margin-top -10px
  margin-bottom 5px

.lol_dir_input
  // margin auto
  -webkit-app-region  no-drag

.lol_dir_input_msg
  text-align center
  margin-top -15px
  height 25px
  width elemWidth

  .yellow
    color yellow

  .green
    color #0ce3ac


// Options
.options
  -webkit-app-region no-drag

  .with_dropdown
    display flex
    flex-direction row
    justify-content space-between

    .ui.icon.button
      padding .05em
    .ui.icon.button>.icon
      vertical-align middle
    .ui.button
      height 20px
    .ui.bottom.pointing.dropdown>.menu
      margin 0 0 0.1em

  .left
    margin-bottom 5px
    label
      color text_color
    label:hover
      color rgba(text_color, 0.5)
    label:after
      color text_color
    input:focus~label
      color text_color

// Submit/Progress
.submitBtns
  -webkit-app-region: no-drag;
  text-align center
  margin-top 20px

.status
  text-align center
  h2
    color text_color

  .ui.progress .bar
    height 1.5em
  .ui.progress:last-child
    margin 0 0 0.3em
  .ui.divider
    margin 0.8rem 0

.progresslog
  // height 230px  // Use for Borderless
  height 170px
  overflow hidden
  text-align center
  margin-top 0px

  ::-webkit-scrollbar
    display none

  div
    height 100%
    overflow auto


// Footer
footerBottom = 2px
footerSide = 10px

footer
  position absolute
  display block
  background-color background_color
  height footerBottom + 22px
  width 100%
  bottom 0px
  z-index 10

.github
  bottom footerBottom
  left footerSide
  position absolute

.version
  bottom footerBottom
  right footerSide
  position absolute
  color #989898


// Update View
.updating
  margin-top 2px
  text-align center

// Error View
.error
  margin-top 2px
  text-align center

  img
    width 100px
    height 100px

  p
    margin-top 30px
    margin-left 4%
    margin-right 4%
